<div class="objectMatching-inner component-inner">
    {{> component this}}
    <div class="objectMatching-widget component-widget {{#unless _isEnabled}} disabled {{#if _isComplete}} complete submitted show-user-answer {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        <div class="objectMatching-categories-container">
            {{#if _categoryTitle}}
            <div class="objectMatching-category-title">{{{_categoryTitle}}}</div>
            {{/if}}
            {{#each categoryItems}}
            <div class="objectMatching-category-item">
                <div data-id="{{{id}}}" class="objectMatching-category-item-name" style="background-color: {{{categoryColor}}}">
                {{{category}}}
                </div>
            </div>
            {{/each}}
        </div>
        <div class="objectMatching-options-container">
            {{#if _optionTitle}}
            <div class="objectMatching-option-title">{{{_optionTitle}}}</div>
            {{/if}}
            {{#each optionItems}}
            <div class="objectMatching-option-item item {{#unless ../_isEnabled}} {{#if _isCorrect}}correct{{else}}incorrect{{/if}} {{/unless}} item-{{@index}}">
                <div class="objectMatching-select-state">
                    <div class="objectMatching-select-icon objectMatching-correct-icon icon icon-tick"></div>
                    <div class="objectMatching-select-icon objectMatching-incorrect-icon icon icon-cross"></div>
                </div>
                <div data-id="{{{id}}}" class="objectMatching-option-item-name" style="background-color: {{{../_defaultAnswerBGColor}}}">
                    {{{option}}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="buttons">
    </div>
</div>